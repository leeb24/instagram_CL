type User {
  id: ID! @id,
  userName:String! @unique,
  email:String! @unique,
  firstName:String! @default(value: ""),
  lastName:String!,
  bio:String,
  posts:[Post!]!,
  comments:[Comment!]!,
  followers:[User!]! @relation(name:"FollowRelation"),
  following:[User!]! @relation(name:"FollowRelation")
}

type Post {
  id: ID! @id,
  files:[File!]!,
  locations: String,
  caption:String!,
  likes:[Like!]!,
  comments:[Comment!]!,
  user:User!
}

type Like {
  id: ID! @id,
  user:User!,
  post: Post!
}
type Comment{
  id: ID! @id,
  text:String!,
  user:User!,
  post:Post!
}

type File {
  id: ID! @id,
  url:String!,
  post:Post!
}